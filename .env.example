# Database
DATABASE_URL="postgresql://username:password@localhost:5432/secure_web_app?schema=public"

# JWT Secrets (use strong, random values in production)
JWT_ACCESS_SECRET="your-super-secret-access-key-at-least-256-bits-long"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-different-from-access"
JWT_MFA_SECRET="your-super-secret-mfa-key-different-from-both"


# JWT Configuration
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
JWT_MFA_EXPIRES_IN="3m"  

# WebAuthn Configuration
RP_ID="localhost"  # Your domain (e.g., "example.com" for production)
RP_NAME="Secure Web App"
ORIGIN="http://localhost:3000"  # Your app's origin

# Security
CSP_REPORT_ONLY="false"  # Set to "true" during initial CSP testing
BCRYPT_ROUNDS="12"

# Rate Limiting
RATE_LIMIT_ENABLED="true"

# Development
NODE_ENV="development"
NEXTAUTH_URL="http://localhost:3000"  # Keep for compatibility, though not using next-auth